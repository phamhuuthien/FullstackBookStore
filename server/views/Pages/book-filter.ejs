          </div>
        </div>
        <div class="books">
          <% books.forEach(function(book) { %>
            <div class="book-card">
              <div class="img">
                <a href="book-detail/<%= book._id %>">
                  <img src="<%= book.image %>" alt="<%= book.name %>" />
                </a>
              </div>
              <h5><%= book.name %></h5>
              <div class="star-rating">
                <% for (let i=0; i < book.totalRating; i++) { %>
                  <i class="fa-solid fa-star"></i>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
        <div class="footer">
          <div class="data-shown">
            <p>Showing <%= books.length %> from <%= totalBooks %> books</p>
          </div>
          <div class="pagination">
            <button <% if (currentPage <= 1) { %>disabled<% } %>>
                <a href="?<%= categoryId !=='undefined' ? 'categoryId=' + categoryId + '&' : '' %>page=<%= currentPage - 1 %>&limit=<%= limit %>">
                    <i class="fa fa-chevron-left"></i> Previous
                </a>
            </button>
            <div class="number">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?<%= categoryId !=='undefined' ? 'categoryId=' + categoryId + '&' : '' %>page=<%= i %>&limit=<%= limit %>" class="<%= i === currentPage ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>
            </div>
            <button <% if (currentPage >= totalPages) { %>disabled<% } %>>
                <a href="?<%= categoryId !=='undefined' ? 'categoryId=' + categoryId + '&' : '' %>page=<%= currentPage + 1 %>&limit=<%= limit %>">
                    Next <i class="fa fa-chevron-right"></i>
