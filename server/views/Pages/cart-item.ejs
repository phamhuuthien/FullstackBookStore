    <section class="cart-item page">
        <h2>Book Cart</h2>
        <div class="product-table">
          <% if (user !== 'null') { 
            if(user.cart[0] !==null) {
              %>
              <% if (user.cart && user.cart.length > 0) { %>
                <table cellspacing=0>
                    <tr class="heading">
                        <th>Product Img</th>
                        <th>Product Name</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Delete</th>
                    </tr>
                    <% user.cart.forEach((item, index) => { %>
                      <tr class="data">
                        <td>
                            <img src="<%= item.book.image %>" alt="">
                        </td>
                        <td><%= item.book.name %></td>
                        <td>$<%= item.book.price %></td>
                        <td>
                            <div class="input-group">
                                <div class="quantity">
                                  <% if(item.quantity === 1){ %>
                                      <a href="<%= process.env.URL%>/user/removeCart/<%=item.book._id%>">
                                        <i class="fas fa-minus"></i>
                                      </a>
                                  <%}else{%>
                                    <a href="<%= process.env.URL%>/user/quantity/<%=item.book._id%>?quantity=desc">
                                      <i class="fas fa-minus"></i>
                                    </a>
                                  <%}%>
                                    <input
                                      type="text"
                                      step="1"
                                      min="1"
                                      value="<%= item.quantity%>"
                                      name="quantity"
                                      class="quantity-field"
                                      style="width: 4.5rem"
                                    />
                                    <a href="<%= process.env.URL%>/user/quantity/<%=item.book._id%>?quantity=asc">
                                      <i class="fas fa-plus"></i>
                                    </a>
                                  </div>
                                </div>
                            </td>
                            <td><%= item.book.price * item.quantity%></td>
                            <td>
                              <a href="<%= process.env.URL%>/user/removeCart/<%=item.book._id%>" >
                                <i class="fa-solid fa-trash"></i>
                              </a>
                            </td>
                        </tr>
                        <% }); %>
                      </table>
                  <% } else { %>
                    <div>
                      <h1>No items in cart.</h1>
                    </div>
                  <% } %>
                <% }} %>
        </div>
    </section>

    <section class="discount-summary">
