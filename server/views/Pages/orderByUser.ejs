<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>author</title>
    <link rel="stylesheet" href="<%= process.env.URL%>/css/pagination.css">    
    <style>
      .main{
        padding : 40px;
      }
        .details {
            display: block;
        }
        .link-btn{
            text-decoration: none;
        }
        .active {
          transform: rotate(-360deg) !important;
        }
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }

        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="<%= process.env.URL%>/js/pagination.js"></script>
</head>

<body>
    <div class="container">
        <%- include("../partials/header") -%>
        <div class="main">
            <div class="details">
                <div class="recentOrders">
                    <table>
                        <thead>
                            <tr>
                                <td>index</td>
                                <td>info</td>
                                <td>total</td>
                                <td>status</td>
                                <td>action</td>
                            </tr>
                        </thead>
                        <tbody id="content">
                            <!-- content table -->
                            <%if(orders!=null){ orders.forEach((item, index)=>{ %>
                              <tr>
                                <td><%=index%></td>
                                <td>
                                  <%item.listBooks.forEach((book, index)=>{%>
                                    <div class="info" style="display: flex; margin: 10px;">
                                      <img style="width: 50px; height: 50px; object-fit: cover;" src="<%=book.bookId.image%>" alt="">
                                      <div>
                                        <div class="name">
                                          <span>name :</span>
                                          <span><%=book.bookId.name%></span>
                                        </div>
                                        <div class="quantity">
                                          <span>quantity :</span>
                                          <span><%=book.quantity%></span>
                                        </div>
                                      </div>
                                    </div>
                                  <%})%>
                                </td>
                                <td><%=item.total%></td>
                                <td><%=item.status%></td>
                                <%if(item.status=='pending'){%>
                                  <td><a href="<%= process.env.URL%>/order/cancleOrder/<%=item._id%>">há»§y</a></td>
                                <%}else{%>
                                  <td><a href="<%= process.env.URL%>/order/<%=item._id%>">detail</a></td>
                                <%}%>
                              </tr>
                            <%})}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
  <script src="<%= process.env.URL%>/js/admin.js"></script>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
<script>
  function cancelOrderConfirmation(orderId) {
  if (window.confirm('Are you sure you want to cancel this order?')) {
    return true;
  }
}
</script>
</html>