<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bookoe - Online Book Store website</title>
  <link rel="stylesheet" href="<%= process.env.URL%>/css/style.css" />
  <link rel="stylesheet" href="<%= process.env.URL%>/css/book-filter.css" />
  <!-- Fontawesome Link for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <!--- google font link-->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"
    rel="stylesheet" />
  <style>
    /* Modal container */
    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0, 0, 0);
      background-color: rgba(0, 0, 0, 0.4);
    }

    /* Modal content */
    .modal-content {
      background-color: #fefefe;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      max-width: 500px;
      border-radius: 10px;
    }

    /* Close button */
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    /* Form styles */
    .modal form {
      display: flex;
      flex-direction: column;
    }

    #modalForm label {
      margin-top: 10px;
    }

    #modalForm input[type="text"],
    #modalForm input[type="email"],
    #modalForm input[type="submit"] {
      padding: 10px;
      margin-top: 5px;
      font-size: 16px;
    }

    #modalForm input[type="submit"] {
      background-color: #6C5DD4;
      color: white;
      border: none;
      cursor: pointer;
      margin-top: 20px;
    }

    #modalForm input[type="submit"]:hover {
      background-color: #7363d8;
    }
  </style>
</head>

<body>
  <% if (typeof message !=='undefined' ) { %>
    <script>
      alert('message: <%= message %>');
    </script>
    <% } %>
      <div class="breadcrumb-container">
        <ul class="breadcrumb">
          <li><a href="<%= process.env.URL%>" style="color: #6c5dd4">Home</a></li>
          <li><a href="#">Login</a></li>
        </ul>
      </div>

      <section class="login">
        <h3>Login</h3>
        <div class="login-form">
          <h4>Login</h4>
          <p>If you have an account with us, please log in.</p>
          <form class="form" autocomplete="off" action="/user/login" method="post">
            <div class="input-form">
              <div class="input-field">
                <label for="email">Email *</label>
                <input type="email" name="email" id="email" placeholder="Email" class="form-input" />
              </div>
              <div class="input-field">
                <label for="password">Password *</label>
                <input type="password" name="password" id="password" placeholder="password" class="form-input" />
              </div>

              <p>Forgot Password ?<a href="#" id="openModalBtn"> Click Here</a></p>
              <button type="submit" class="form-btn">Login</button>
              <p>Don't Have an Account ? <a href="<%= process.env.URL%>/registration">Create Account</a></p>
            </div>
          </form>

        </div>
      </section>
      <%- include("../partials/footer") -%>
        <%- include("../components/backToTop") -%>

          <!-- modal -->
          <div id="myModal" class="modal">
            <div class="modal-content">
              <span class="close">&times;</span>
              <h2>enter email :</h2>
              <form action="/user/forgotPassword" method="get" id="modalForm">
                <input type="email" id="email" name="email" placeholder="Nhập email của bạn..." required>
                <input type="submit" class="btn-submit" value="Submit">
              </form>
            </div>
          </div>
          <script>
            document.addEventListener('DOMContentLoaded', (event) => {
              var modal = document.getElementById("myModal");
              var btn = document.getElementById("openModalBtn");
              var span = document.getElementsByClassName("close")[0];
              var btnSubmit = document.getElementsByClassName("btn-submit")
              btn.onclick = function () {
                modal.style.display = "block";
              }

              span.onclick = function () {
                modal.style.display = "none";
              }

              window.onclick = function (event) {
                if (event.target == modal) {
                  modal.style.display = "none";
                }
              }
              btnSubmit.onclick = () => {
                modal.style.display = "none";
              }
            });

          </script>
</body>

</html>