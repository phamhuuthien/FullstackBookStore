<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>customer</title>
    <link rel="stylesheet" href="<%= process.env.URL%>/css/admin.css">    
    <style>
        .details {
            display: block;
        }
        .link-btn{
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include("../partials/navigation") -%>
        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>

                <div class="user">
                    <img src="<%= process.env.URL%>/images/customer01.jpg" alt="">
                </div>
            </div>

            <div class="details">
                <div class="recentOrders">
                    <table>
                        <thead>
                            <tr>
                                <td>index</td>
                                <td>Name</td>
                                <td>email</td>
                                <td>phone</td>
                                <td>isBlocked</td>
                                <td>update</td>
                                <td>delete</td>
                            </tr>
                        </thead>

                        <tbody>
                            <%response.forEach(function(item,index) {%>
                                <tr>
                                    <td><%=++index%></td>
                                    <td><%=item.firstname%></td>
                                    <td><%=item.email%></td>
                                    <td><%=item.mobile%></td>
                                    <td><%=item.isBlocked%></td>
                                    <td>
                                        <form action="<%= process.env.URL%>/user/isBlocked/<%= item._id%>?_method=put" method="post" style="display: inline;">
                                            <button class="status delivered" type="submit">Block</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="<%= process.env.URL%>/user/deleteUser/?_id=<%= item._id%>&_method=delete" method="post" style="display: inline;">
                                            <button class="status delivered" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% })%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- =========== Scripts =========  -->
    <script src="<%= process.env.URL%>/js/admin.js"></script>

    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>

</html>