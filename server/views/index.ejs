        </div>
        <div class="minutes">
          <span id="minute"></span>
          <small for="minute">Minutes</small>
        </div>
        <div class="seconds">
          <span id="second"></span>
          <small for="second">Seconds</small>
        </div>
      </div>
      <!-- views/index.ejs -->
      <div class="book-container">
        <% for (let i = 0; i < 5 && i < booksFlashSale.length; i++) { %>
          <div class="book" style="width: 200px; border: 1px solid #ddd; padding: 10px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
            <div class="img">
              <a href="/book/book-detail/<%= booksFlashSale[i]._id %>">
                <img src="<%= booksFlashSale[i].image %>" alt="" style="width: 100%; height: auto;" />
              </a>
            </div>
            <h5 style="font-size: 16px; font-weight: bold; margin: 10px 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%; display: block;">
              <%= booksFlashSale[i].name %>
            </h5>
            <div class="price" style="font-size: 14px; color: #555;">
              <span style="margin-right: 5px;">$<%= booksFlashSale[i].price.toFixed(2) %></span>
              <span><strike style="color: #999;">$<%= (booksFlashSale[i].price * 1.4).toFixed(2) %></strike></span>
            </div>
          </div>
        <% } %>
      </div>
