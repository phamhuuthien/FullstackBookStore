      <div class="offer-container">
        <% for (let i = 0; i < bookSpecial.length; i++) { %>
          <div class="offer">
            <div class="img">
              <a href="/book/book-detail/<%= bookSpecial[i]._id %>">
                <img style="min-height: 160px;" src="<%= bookSpecial[i].image %>" alt="" />
              </a>
            </div>
            <div class="offer-content">
              <h5><%= bookSpecial[i].name %></h5>
              <p style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 300px;">
                <%= bookSpecial[i].description %>
              </p>
              
              <small><%= bookSpecial[i].authorId.name %></small>
              <div class="offer-bottom">
                <% if(typeof user !== 'undefined' ){ %>
                  <a href="/user/addCart/<%= books[i]._id %>" class="cartbtn">
                    <i class="fa-solid fa-cart-shopping"></i>Add to cart
                  </a>
                  <%}else{ %>
                    <a href="/login" class="cartbtn">
                      <i class="fa-solid fa-cart-shopping"></i>Add to cart
                    </a>
                    <% } %>
